<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Electricity -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/imageViewElectricityIcon"
                android:src="@drawable/ic_electricity"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自動化流程"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:background="@drawable/electricity_bargraph_prototype"
                android:id="@+id/textViewElectricBarView"
                android:layout_below="@+id/imageViewElectricityIcon"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="列出腳本"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewElectricBarView"
                android:id="@+id/button_test_game"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />

            <Button
                android:text="啟動服務"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_test_game"
                android:id="@+id/button_start_service"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="bc6#eg7#j8"
                android:ems="10"
                android:layout_below="@+id/button_start_service"
                android:id="@+id/edit_text_battle_parameter"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:textAlignment="center" />

            <Button
                android:text="設定戰鬥技能"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_battle_parameter"
                android:id="@+id/button_set_battle_parameter"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="10dp"
                android:text="點擊上方按鈕啟動服務，長壓圖示以結束"
                android:id="@+id/textViewAccountNum"
                android:textAlignment="center"
                android:layout_below="@+id/button_set_battle_parameter"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>