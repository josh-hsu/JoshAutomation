<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="腳本設定">
        <ListPreference
            android:key="scriptSelectPref"
            android:title="選擇腳本"
            android:summary="點擊選擇"
            android:defaultValue="0"/>
        <CheckBoxPreference
            android:key="debugLogPref"
            android:title="偵錯模式"
            android:summary="Log 全開模式"
            android:defaultValue="false"/>
        <CheckBoxPreference
            android:key="stringFormattedPointEnable"
            android:title="字串找點模式"
            android:summary="使用相機截圖找點時，可以使用簡易字串來建立 ScreenPoint"
            android:defaultValue="false"/>
        <CheckBoxPreference
            android:key="scriptExecuteLoopPref"
            android:title="重複執行"
            android:summary="是否自動重複執行"
            android:defaultValue="false"/>
        <EditTextPreference
            android:key="scriptExecuteTimePref"
            android:title="腳本執行次數"
            android:summary="1 次"
            android:defaultValue="1"
            android:maxLength="40"/>
    </PreferenceCategory>

</PreferenceScreen>