<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="戰鬥設定">
        <EditTextPreference
            android:key="epic7PerfBattleCount"
            android:title="連續戰鬥場數"
            android:summary=""
            android:defaultValue="10"
            android:maxLength="3"/>
        <EditTextPreference
            android:key="epic7PerfBattleTimeout"
            android:title="戰鬥逾時秒數"
            android:summary="設定一場戰鬥 timeout 的秒數，預設 120 秒"
            android:defaultValue="120"
            android:maxLength="4"/>
    </PreferenceCategory>
</PreferenceScreen>